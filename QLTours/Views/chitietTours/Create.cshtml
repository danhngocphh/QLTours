@model QLTours.Models.chitietTour

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>chitietTour</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.IdTour, "Tour", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("IdTour", null, htmlAttributes: new { @class = "form-control",@onchange = "idtour(this.value)" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdDiaDiem, "Thành phố", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("ThanhPho", null, htmlAttributes: new { @class = "form-control",@onchange = "thanhpho(this.value)" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdDiaDiem, "Tên địa điểm", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ListBox("IdDiaDiem", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IdDiaDiem, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.STTDiaDiem, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.STTDiaDiem, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.STTDiaDiem, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.IdDiaDiem, "Các địa điểm khác của tour", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.ListBox("chitiettour", null, htmlAttributes: new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<script>
    function idtour(val) {
        window.location.href = "/chitietTours/Create?thanhpho=" + @Request.QueryString["thanhpho"] + "&idtour=" + val;
    }
</script>

<script>
    function thanhpho(val){
        window.location.href = "/chitietTours/Create?thanhpho=" + val +"&idtour="+@Request.QueryString["idtour"];
    }
</script>